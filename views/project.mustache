<div class="project">
	<div class="project__header">
		<h1 class="headline_1">{{ title }}</h1>
		<p class="headline_3">{{ subhead }}</p>
	</div>

	<div class="project__info">
		<div class="project__image">
		{{# images }}
			{{# first }}
			<img class="project__highlight" src="{{ url }}" sizes="{{ sizes }}" srcset="{{ srcset }}" alt="{{ desc }}">
			{{/ first }}
		{{/ images }}
		</div><!--

 --><div class="project__text">
			{{{ text }}}
		</div>
	</div>

	{{> meta }}

	<div class="project__gallery">
	{{# images }}
		{{^ first }}
		<img src="{{ url }}" sizes="{{ sizes }}" srcset="{{ srcset }}" alt="{{ desc }}">
		{{/ first }}
	{{/ images }}
	</div>
</div>